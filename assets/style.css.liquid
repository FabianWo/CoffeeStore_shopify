/*

--- rough Organization rules ---

1. general styles: root, body, html, container etc.
2. reusable styles/"utitily classes" (font, color, line, ...)
3. specific purpose/element styles

every section is ordered acccording to html structure
naming convention used: BEM

*/


/* ----- 1. GENERAL STYLES ----- */

/* dynamic font-face for shopify */

{%- for variant in settings.font-primary.variants -%}
  {%- if variant.style == 'normal' -%}
  @font-face {
    font-weight: {{variant.weight}};
    src: url({{ variant | font_url }});
    font-family: {{ settings.font-primary.family | append: variant.weight}};
  }
  {% endif %}
{% endfor %}

{%- for variant in settings.font-secondary.variants -%}
  {%- if variant.style == 'normal' -%}
  @font-face {
    font-weight: {{variant.weight}};
    src: url({{ variant | font_url }});
    font-family: {{ settings.font-secondary.family | append: variant.weight}};
  }
  {% endif %}
{% endfor %}

{%- for variant in settings.font-tertiary.variants -%}
  {%- if variant.style == 'normal' -%}
  @font-face {
    font-weight: {{variant.weight}};
    src: url({{ variant | font_url }});
    font-family: {{ settings.font-tertiary.family | append: variant.weight}};
  }
  {% endif %}
{% endfor %}

/* static fonts */

@import url('https://fonts.googleapis.com/css2?family=Mate+SC&display=swap');


:root {
  /* --color-espresso: #95856A; */
  /* --color-darkbrown: #474138; */
  /* --color-bg: #FFFAF3; */
  /* --color-creme: #FFF6E5; */
  /* --color-lightgrey: #F5F3F0; */

  --color-espresso: {{ settings.coloryo }};
  --color-ctagreen: #609A98;
  --color-submitred: #D26060;
  --color-darkblue: #0D1A1D;
  --color-darkbrown: #474138;
  --color-bg: #FAFAFA;
  --color-creme: #FFF6E5;
  --color-lightgrey: #F5F3F0;
  --shadow-box1: 2px 2px 12px rgba(0, 0, 0, 0.109), 0px 8px 12px -6px rgba(124, 124, 124, 0.15);
  color: black;
  letter-spacing: -.045em;
  font-family: {{ settings.font-primary.family | append: settings.font-primary.weight}};
}

* {
  margin: 0;
  padding: 0;
  list-style-type: none;
  box-sizing: border-box;
}

a {
  text-decoration: none;
  color: white;
}

button {
  outline: none;
  border: none;
  background-color: white;
}

body {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: var(--color-bg);
}

.templatename {
  background-color: black;
  color: white;
  font-size: 16;
  width: 100%;
  text-align: center;
  display: none;
}

.container {
  display: flex;
  justify-content: center;
  flex-direction: column;
  width: 80%;
}

/* ----- 2. REUSABLE STYLES / UTILITY CLASSES ----- */

/* navigation */

.logo {
  display: block;
}

.nav__icon {
  display: block;
}

/* main */

.main__section {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* text styles */

.h1-heading-main {
  font-size: clamp(44px, 7vw, 3.25rem);
  letter-spacing: -.06em;
  color: white;

  font-family: {{ settings.font-secondary.family | append: '700'}};
}

.h2-heading-main {
  font-size: 3rem;
  letter-spacing: -.065em;

  font-family: {{ settings.font-primary.family | append: '500'}};
}

.h3-heading-main {
  font-size: 2.375rem;
  letter-spacing: -.065em;
  color: white;
  text-shadow: 0px 4px 26px rgba(0, 0, 0, 0.25), 0px 0px 50px #0D1A1D;

  font-family: {{ settings.font-secondary.family | append: '700'}};
}

.h1-heading-secondary {
  font-size: 2.5rem;
  letter-spacing: -.065em;

  font-family: {{ settings.font-primary.family | append: '500'}};
}

.h2-heading-secondary {
  font-size: 1.875rem;
  letter-spacing: -.065em;

  font-family: {{ settings.font-primary.family | append: '500'}};
}

.regular-text {
  line-height: 1.5rem; 
  font-size: 1.125rem;
  font-family: {{ settings.font-primary.family | append: '400'}};
}

/* reusable box styles */

.box-lightshadow {
  background-color: white;
  border-radius: 4px;
  box-shadow: var(--shadow-box1);
}

/* button styles 36 42 50*/

.button-black {
  white-space: nowrap;
  cursor: pointer;
  letter-spacing: -0.045em;
  padding: 0.75rem 1.3rem;
  font-size: 1.125rem;
  border-radius: 4px;
  color: black;
  border: 1px solid black;
  
  font-family: {{ settings.font-primary.family | append: '500'}};
}

.button-black:hover {
  background-color: black;
  color: white;
}

.button-red {
  padding: 0.75rem 1.3rem;
  font-size: 1.125rem;
  letter-spacing: -0.045em;
  white-space: nowrap;
  cursor: pointer;
  border-radius: 4px;
  color: var(--color-submitred);
  border: 1px solid var(--color-submitred);
  transition: all 0.3s;
  
  font-family: {{ settings.font-primary.family | append: '500'}};
}

.button-red:hover {
  background-color: var(--color-submitred);
  color: white;
}

.button-small {
  letter-spacing: -0.045em;
  padding: 0.45rem 0;
  font-size: 1.125rem;
  min-width: 210px;
  transition: all 0.3s;
}

.button-small:hover {
  font-family: {{ settings.font-primary.family | append: '600'}};
}


/* footer */


/* ----- 3. SPECIFIC STYLES (BEM) ----- */

/* navigation */

.nav {
  display: flex;
  justify-content: center;
  background-color: var(--color-darkblue);
  color: white;
  width: 100%;
  padding: 0.65rem 0;
}

.nav-container {
  display: grid;
  grid-template-columns: 1fr 0.75fr 1fr;
  width: 70%;
}

.nav__list {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  align-items: center;
  width: 100%;
  justify-content: center;
  column-gap: 1.5rem;
}

.nav__list-side {
  display: flex;
  align-items: center;
  justify-self: flex-end;
  column-gap: 1rem;
}

.nav__list-item {
  padding: 0.75rem 0;
  text-align: center;
}

.nav__link {
  white-space: nowrap; 
  font-size: 1.25rem;
  transition: color .3s;
  color: #ffffff;
  
  letter-spacing: -.06em;
  font-family: {{ settings.font-primary.family | append: '400'}};
}

.nav__link:hover {
  color: rgb(209, 209, 209);
}

.nav__searchbar {
  position: relative;
  display: flex;
  margin-left: 2rem;
  transition: width 0.5s;
  align-items: center;
}

.nav__searchbar:hover {
  /* width: 250px; */
}

.searchbar__input {
  border: none;
  outline: none;
  border-radius: 2px;
  padding: 0.5rem 0 0.35rem 0.5rem;
  top: 0%;
  left: 0%;
  width: min-content;
}

.searchbar__input::placeholder {
  color: rgb(34, 34, 34);
}

.search__link {
  z-index: 10;
}

.nav__search-icon {
  padding: 3px 0;
  margin-left: 0.5rem;
  /* background-color: #1c3033; */
}

.nav__cart-icon {
}


/* main */

.main {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

/* Hero section */

.section-hero::before {
  content: '';
  position: absolute;
  z-index: -10;
  background-repeat: no-repeat;
  
  top: -15.8%;
  width: 102%;
  height: 720px;
  background-size: cover;
  background-position: center;
}

.section-hero {
  position: relative;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height: 36rem;
  overflow: hidden;
}

.hero__elements {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  max-width: 550px;
  margin-left: 70%;
}

.hero__heading {
  text-shadow: 0px 0px 64px rgba(0, 0, 0, 0.84);
  color: white;
}

.hero__cta-container {
  margin-top: 1rem;
}

.hero__cta {
  padding: 0.75rem 1.3rem;
  font-size: clamp(1.2rem, 1.5vw, 1.375rem);
  letter-spacing: -0.065em;
  color: white;
  white-space: nowrap;
  cursor: pointer;
  border-radius: 2px;
  background-color: var(--color-ctagreen);
  transition: all 0.3s;

  font-family: {{ settings.font-primary.family | append: '500'}};
}

.hero__cta:hover {
  background-color: #64afac;
}

.hero__cta[secondarycta] {
  background-color: var(--color-espresso);
}

/* featured links section */

.section-featured-links {
  width: 100%;
  flex-direction: column;
}

.featured-links__heading {
  margin-bottom: 4rem;
}

.featured-links-wrapper {
  display: flex;
  align-items: center;
  column-gap: 2rem;
  row-gap: 2rem;
  flex-wrap: wrap;
  justify-content: center;
}

.featured-link {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 390px;
  height: 270px;
  border-radius: 2px;
  background: radial-gradient( rgba(0, 0, 0, 0.13) 0%, rgba(13, 26, 29, 0.46) 82.73%);
}

.featured-link__image {
  position: absolute;
  z-index: -10;
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: blur(0.75px);
}

.featured-link__content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.featured-link__text {
  color: white;
  font-size: 1.375rem;
}


/* testimonial section */

.section-testimonials {
  justify-content: space-around;
  align-items: flex-start;
  position: relative;
  width: 100%;
  padding: 0 17%;
  z-index: 10;
  flex-wrap: wrap;
}

.testimonial-wrapper {
  display: flex;
  align-content: flex-start;
  position: relative;
  flex-direction: column;
  max-width: 280px;
  min-width: 280px;
  padding: 1rem 0 0.5rem;
  margin: 4rem 1rem;
  text-align: center;
  flex: 1 1 0px;
}

.testimonial__quotes {
  display: block;
  position: absolute;
  top: -7%;
  left: 8.75%;
  color: rgba(15, 28, 32, 0.12);
  font-family: 'Mate SC', serif;
  font-size: 144px;
}

.testimonial__author {
  justify-self: flex-end;
  margin-top: 0.6rem;
  font-size: 0.875rem;
  color: #5f5f5f;
}

.testimonial__text {
  font-size: 1.12rem;
  letter-spacing: -0.06em;
  margin-bottom: auto;

  font-family: {{ settings.font-primary.family | append: '400'}};
}

/* featured products section */

.section-featured-products {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.featured-products__wrapper {
  display: flex;
  flex-wrap: wrap;
  column-gap: 2rem;
  margin-top: 4rem;
  justify-content: center;
  row-gap: 2rem;
}

.product-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 2.5rem 3rem;
  max-width: 320px;
}

.product-card__image {
  width: 230px;
  height: 200px;
  object-fit: cover;
  border-radius: 2px;
}

.product-card__text {
  margin-top: 2rem;
  font-size: 1.25rem;
  text-align: center;
}

.product-card__price {
  margin-top: 0.5rem;
  font-size: 1.5rem;

  font-family: {{ settings.font-tertiary.family | append: '500'}};
}

.product-card__per-kg-price {
  margin-top: 0.2rem;
  font-size: 0.75rem;
  
  color: #666666;
  font-family: {{ settings.font-primary.family | append: '500'}}; 
}

.product-card__link {
margin-top: auto;
}

.product-card__button {
  margin-top: 1rem;
  align-self: flex-end;
}

/* from order to customer steps section */

.section-product-steps {
  flex-direction: column;
  padding: 1rem;
  width: 40%;
  margin-top: 6rem;
}

.product-step-wrapper {
  width: 70%;
  display: flex;
  justify-items: flex-start;
  align-items: center;
  text-align: center;
  margin: 5rem 0;
}

.product-step__text-container {
  flex: 1 0 auto;
  display: flex;
  justify-content: center;
}

.product-step__text {
  max-width: 280px;
  font-size: 1.25rem;
  letter-spacing: -0.05em;
  font-family: {{ settings.font-primary.family | append: '400'}};
}

.product-step__number {
  min-width: 5.5rem;
  justify-self: center;
  font-size: 3.375rem;
  
  font-family: {{ settings.font-primary.family | append: '400'}};
}

.product-step__icon {
  max-width: 76px;
  display: block;
  width: 3.25rem;
}

/* blog-template */

.blog-template {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.blog__hero {
  flex-direction: column;
  justify-content: flex-start;
  background-color: rgba(207, 207, 207, 0.294);
  overflow: hidden;
  height: 18rem;
}

.blog__hero::before {
  content: '';
  position: absolute;
  z-index: -10;
  background-repeat: no-repeat;
  background-size: auto;
  filter: blur(0.75px);
  top: -2px;
  left: -2px;
  width: 120%;
  height: 1060px;
  background-position: 0% 70%;
}

.blog__header {
  display: flex;
  flex-direction: column;
  align-items: center;
  align-self: center;
  z-index: 10;
  width: 480px;
  height: 220px;
  padding: 3rem 2.5rem;
  margin-top: 10rem;
}

.blog__heading {
  font-size: 2.5rem;
}

.blog__description {
  text-align: center;
  max-width: 380px;
  margin-top: 1rem;
}

.blog__articles {
  width: 50%;
  display: flex;
  align-self: center;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 10;
  margin-top: 4rem;
  row-gap: 2rem;
}

.blog__article-wrapper {
  display: flex;
  margin:  0 2rem;
  overflow: hidden;
  transition: all 0.2s ease-out;
  width: 100%;
  height: 210px;
}

.blog__article-wrapper:hover {
  /* transform: translateY(-2px); */
  box-shadow: 
  3px 4px 12px rgba(0, 0, 0, 0.109),
  1px 10px 12px -6px rgba(124, 124, 124, 0.15);;
}

.blog__article-image-wrapper {
  display: flex;
}

.blog__article-image {
  object-fit: cover;
  width: 230px;
}

.blog__article-textbox {
  display: flex;
  flex-direction: column;
  background-color: white;
  padding: 1.5rem 2rem 1rem;
  margin: 0 auto;
}

.blog__article-heading {
  align-self: center;
  font-size: 1.6rem;
}

.blog__article-heading:hover .blog__article-link {
  color: var(--color-darkbrown);
}

.blog__article-heading > a { 
  color: var(--color-darkblue);
}

.blog__article-excerpt {
  margin-top: 1.5rem;
}

.blog__article-author {
  margin-top: auto;
  text-align: center;
}

/* article-template */

.article-template {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}


.article__hero {
  width: 100%;
  flex-direction: column;
  justify-content: flex-start;
  background-color: rgba(207, 207, 207, 0.294);
  overflow: hidden;
  height: 18rem;
}

.article__hero::before {
  content: '';
  position: absolute;
  z-index: -10;
  top: -2%;
  left: -1%;
  width: 140%;
  height: 103%;
  background-position: 0% 70%;
  background-repeat: no-repeat;
  background-size: auto;
  filter: blur(0.75px);
}

.article__header {
  width: 480px;
  height: 220px;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 3rem 2.5rem 0;
  align-self: center;
  z-index: 10;
}

.article__excerpt {
  text-align: center;
  max-width: 380px;
  margin-top: 2rem;
}

.article__author {
  margin: auto;
  text-align: center;
}

.article__content-wrapper {
  max-width: 960px;
  align-self: center;
  padding: 2rem 6rem;
  margin-top: 2rem;
}

.article__content-tags {
  display: flex;
}

.article__content-tag {
  margin-right: 0.75rem;
  padding: 0.4rem 1.1rem;
  border-radius: 70px;
  background-color: #F0F0F0;
  color: black;
  font-size: 0.875rem;
}

.article__content {
  margin-top: 2rem;
  line-height: 1.6rem;
}

.article__newcomment {
  display: flex;
  margin: 2rem auto 0;
  width: 60%;
}

.article__comment-form {
  width: 100%;
  display: flex;
  flex-direction: column;
}

.article__form-info {
  display: flex;
  margin-bottom: 1rem;
}

.article__form-message {
  display: flex;
}

.article__form-label {
  margin-right: 1.5rem;
  margin-top: 0.35rem;
  width: 120px;
  font-family: {{ settings.font-primary.family | append: '500'}};
}

.article__form-input {
  padding: 0.4rem 0 0.3rem 0.5rem;
  width: 100%;
  resize: none;
  border: 1px solid rgb(54, 54, 54);
  border-radius: 2px;
}

.article__form-message textarea {
  height: 200px;
}

.article__form-button {
  margin-top: 1.5rem;
  max-width: 250px;
  align-self: center;
}

.article__comments {
  display: flex;
  flex-direction: column;
  margin-top: 4rem;
}

.article__number-of-comments {
  align-self: center;
  font-size: 2rem;
  margin: 0;
}

.article__comment {
  display: flex;
  flex-direction: column;
  margin-top: 3rem;
}


/*  footer */

.footer{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: var(--color-darkblue);
  color: white;
  width: 100%;
  margin-top: 4rem;
  padding: 2rem 0;
}

.footer__container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  justify-content: center;
  column-gap: 3rem;
  row-gap: 2rem;
  padding: 0 1rem;
}

.footer__lists {
  display: flex;
  flex-wrap: wrap;
  row-gap: 2rem;
  column-gap: 3rem;
}

.footer__list-container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.footer__list {
  display: flex;
  flex-direction: column;
}

.footer__list-item {
  padding: 0.25rem 0;
  text-align: start;
  white-space: normal;
}

.footer__link {
  color: #c0c0c0;
  font-size: 1rem;
}

.footer__link:hover {
  color: white;
}
.footer__heading {
  padding-bottom: 0.5rem;
  white-space: normal;
  color: white;
}

.footer__heading-link {
  font-size: 1.25rem;
  letter-spacing: -0.045em;
 
  font-family: {{ settings.font-primary.family | append: '500'}}
}

.footer__extras {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  gap: 1.5rem;
  width: 100%;
  margin-top: 2rem;
  padding-top: 2rem;
}

.social-icons {
  display: flex;
  column-gap: 1.5rem;
}

.footer__extras::before {
  content: '';
  top: 0%;
  position: absolute;
  width: 100%;
  height: 1px;
  background-color: rgb(114, 114, 114);
}

@media (max-width: 1200px) {
  .nav-container {
    width: 95%;
  }

  .hero__elements {
    margin-bottom: 14rem;
    margin-left: 50%;
  }

  .section-hero::before {
    top: -2%;
  }
}

@media (max-width: 800px) {

  .section-hero::before {
    height: 500px;
  }

  
  .section-hero {
    height: 26rem;
  }

  .hero__elements {
    margin-left: 30%;
    margin-bottom: 8rem;
  }
  

  
}

@media (max-width: 500px) {
  
  /* .footer__list-container::before, */
  /* .footer__list  {
    margin-left: 1rem;
  } */

  .hero__elements {
    margin-left: 10%;
    margin-bottom: 10rem;
  }

  .featured-link {
    width: 300px;
    height: 200px;
  }

  .hero__cta-container {
    margin-top: 0.5rem;
  }

}