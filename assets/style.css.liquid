/*

--- rough Organization rules ---

1. general styles: root, body, html, container etc.
2. reusable styles/"utitily classes" (font, color, line, ...)
3. specific purpose/element styles

every section is ordered acccording to html structure
naming convention used: BEM

*/


/* ----- 1. GENERAL STYLES ----- */

/* dynamic font-face for shopify */

{%- for variant in settings.font-primary.variants -%}
  {%- if variant.style == 'normal' -%}
  @font-face {
    font-weight: {{variant.weight}};
    src: url({{ variant | font_url }});
    font-family: {{ settings.font-primary.family | append: variant.weight}};
  }
  {% endif %}
{% endfor %}

{%- for variant in settings.font-secondary.variants -%}
  {%- if variant.style == 'normal' -%}
  @font-face {
    font-weight: {{variant.weight}};
    src: url({{ variant | font_url }});
    font-family: {{ settings.font-secondary.family | append: variant.weight}};
  }
  {% endif %}
{% endfor %}

{%- for variant in settings.font-tertiary.variants -%}
  {%- if variant.style == 'normal' -%}
  @font-face {
    font-weight: {{variant.weight}};
    src: url({{ variant | font_url }});
    font-family: {{ settings.font-tertiary.family | append: variant.weight}};
  }
  {% endif %}
{% endfor %}

/* static fonts */

@import url('https://fonts.googleapis.com/css2?family=Mate+SC&display=swap');


:root {
  /* --color-espresso: #95856A; */
  /* --color-darkbrown: #474138; */
  /* --color-bg: #FFFAF3; */
  /* --color-creme: #FFF6E5; */
  /* --color-lightgrey: #F5F3F0; */

  --color-espresso: {{ settings.coloryo }};
  --color-ctagreen: #609A98;
  --color-submitred: #D26060;
  --color-darkblue: #0D1A1D;
  --color-navdivider: rgb(114, 114, 114);
  --color-darkbrown: #474138;
  --color-bg: #FAFAFA;
  --color-creme: #FFF6E5;
  --color-lightgrey: #F5F3F0;
  --shadow-box1: 2px 2px 12px rgba(0, 0, 0, 0.109), 0px 8px 12px -6px rgba(124, 124, 124, 0.15);
  color: black;
  letter-spacing: -.045em;
  font-family: {{ settings.font-primary.family | append: settings.font-primary.weight}};
}

* {
  margin: 0;
  padding: 0;
  list-style-type: none;
  box-sizing: border-box;
}

a {
  text-decoration: none;
  color: white;
}

img {
  display: block;
}

button {
  outline: none;
  border: none;
  background-color: white;
}

html {
  display: flex;
  flex-direction: column;
  align-items: center;
}

body {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: var(--color-bg);
  width: 100%;
  max-width: 1920px;
}

.templatename {
  background-color: black;
  color: white;
  font-size: 16;
  width: 100%;
  text-align: center;
  display: none;
}

.container {
  display: flex;
  justify-content: center;
  flex-direction: column;
  width: 80%;
}

/* ----- 2. REUSABLE STYLES / UTILITY CLASSES ----- */

/* navigation */

.logo-container {
  display: flex;
  align-items: center;
}

.logo {
  display: block;
}

.nav__icon {
  display: block;
  width: 26px;
}

/* main */

.main__section {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* text styles */

.h1-heading-main {
  font-size: clamp(44px, 6vw, 3.75rem);
  letter-spacing: -.06em;
  color: white;
  font-weight: 700;
  margin: 0;
  
  font-family: {{ settings.font-secondary.family | append: '700'}};
}

.h2-heading-main {
  font-size: clamp(32px, 4vw, 2.75rem);
  letter-spacing: -.06em;
  margin: 0;
  
  font-family: {{ settings.font-secondary.family | append: '700'}};
}

.h3-heading-main {
  font-size: clamp(30px, 6vw, 2.375rem);
  letter-spacing: -.065em;
  color: white;
  text-shadow: 0px 4px 26px rgba(0, 0, 0, 0.25), 0px 0px 50px #0D1A1D;
  margin: 0;
  
  font-family: {{ settings.font-secondary.family | append: '700'}};
}

.h1-heading-secondary {
  font-size: clamp(28px, 6vw, 2.25rem);;
  letter-spacing: -.055em;
  font-weight: 500;
  margin: 0;
  
  font-family: {{ settings.font-primary.family | append: '500'}};
}

.h2-heading-secondary {
  font-size: clamp(20px, 3vw, 1.625rem);
  letter-spacing: -.065em;
  font-weight: 500;
  margin: 0;
  color: black;
  
  font-family: {{ settings.font-primary.family | append: '500'}};
}

.h3-heading-secondary {
  font-size: clamp(20px, 3vw, 1.25rem);
  letter-spacing: -.065em;
  font-weight: 500;
  margin: 0;
  color: black;
  
  font-family: {{ settings.font-primary.family | append: '500'}};
}

.text-black {
  color: black;
}

.regular-text {
  line-height: 1.65rem; 
  font-size: 1.125rem;
  font-family: {{ settings.font-primary.family | append: '400'}};
}

/* reusable box styles */

.box-lightshadow {
  background-color: white;
  border-radius: 4px;
  box-shadow: var(--shadow-box1);
}

/* button styles 36 42 50*/

.button-black {
  white-space: nowrap;
  cursor: pointer;
  letter-spacing: -0.045em;
  padding: 0.75rem 1.3rem;
  font-size: 1.125rem;
  border-radius: 4px;
  color: black;
  border: 1px solid black;
  
  font-family: {{ settings.font-primary.family | append: '500'}};
}

.button-black:hover, .button-black:focus {
  background-color: black;
  color: white;
}

.button-red {
  padding: 0.65rem 0.6rem;
  font-size: clamp(1.25rem, 5vw, 1.375rem);;
  letter-spacing: -0.04em;
  white-space: nowrap;
  cursor: pointer;
  border-radius: 4px;
  color: var(--color-submitred);
  border: 2px solid var(--color-submitred);
  transition: all 0.3s;
  
  font-family: {{ settings.font-primary.family | append: '600'}};
}

.button-red:hover, .button-red:focus {
  background-color: var(--color-submitred);
  color: white;
}

.button-small {
  letter-spacing: -0.045em;
  padding: 0.55rem 0.75rem;
  font-size: 1.125rem;
  transition: all 0.3s;
}

.button-small:hover,
.button-small:focus {
  font-family: {{ settings.font-primary.family | append: '600'}};
}

/* Quantity button for product / cart page */

.cart__form-quantity-button {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100px;
  padding: 0.5rem 0 0.5rem;
  font-size: 1rem;
  letter-spacing: -0.065em;
  column-gap: 0.35rem;
}

.cart__form-quantity-button:hover,
.cart__form-quantity-button:focus {
  background-color: white;
  color: black;
  cursor: pointer;
  font-family: {{ settings.font-primary.family | append: '500'}}
}

.cart__form-quantity-button:focus .cart__quantity-list {
  opacity: 100;
  visibility: visible;
}

.cart__quantity-input {
  visibility: hidden;
  position: absolute;
  z-index: -10;
  pointer-events: none;
  width: 0;
}

.cart__quantity-input:hover {
  background-color: white;
  color: black;
}

.cart__quantity-list {
  position: absolute;
  z-index: 10;
  top: -1px;
  left: -1px;
  display: flex;
  flex-direction: column;
  width: 102.2%;
  border: 1px solid rgb(66, 66, 66);
  border-radius: 4px;
  background-color: white;
  overflow: hidden;
  visibility: hidden;
  opacity: 0;
  transition: all 0.1s ease-out;
}

.cart__quantity-list-item {
  padding: 0.25rem 0.2rem;
}

.cart__quantity-list-item:hover {
  background-color: #f1f1f1;
  cursor: pointer;
  font-weight: 600;
}

/* pagination navigation */

.pagination-navigation {
  display: flex;
  flex-wrap: wrap;
  align-self: center;
  gap: 0.2rem;
  padding: 0.5rem 2.5rem;
  border-radius: 0px;
  max-width: 90%;
}

.pagination__link {
  font-size: 1.375rem;
  letter-spacing: -.065em;
  color: rgb(0, 0, 0);
  padding: 0.325rem 0.45rem;
  transition: all 0.1s;
  
  font-family: {{ settings.font-primary.family | append: '500'}};
}

.pagination__link:hover,
.pagination__link[selected] {
  color: rgb(155, 155, 155);
}

/* footer */


/* ----- 3. SPECIFIC STYLES (BEM) ----- */

/* navigation */

.nav {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: var(--color-darkblue);
  width: 100%;
}

.nav-container {
  display: flex;
  position: relative;
  justify-content: space-between;
  width: 65%;
  padding: 0.65rem 0;
  column-gap: 0.5rem;
  z-index: 10;

  /* width: 1200444px;
  max-width: 100%;
  padding: 0.65rem 17.5%; */
}

.nav-container-bottom {
  display: flex;
  position: relative;
  justify-content: space-between;
  padding: 0.65rem 1rem;
  column-gap: 0.5rem;
  z-index: 10;
  width: 100%;
  transform: translateX(0%);
  transition: all 0.3s;
}

.nav__list {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  justify-content: center;
  column-gap: 1.5rem;
  row-gap: 0.5rem;
}

.nav__list-side {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: flex-end;
  column-gap: 1rem;
}

.nav__list-item {
  padding: 0.75rem 0;
  text-align: center;
}

.nav__link {
  white-space: nowrap; 
  font-size: 1.25rem;
  transition: color .3s;
  color: #ffffff;
  
  letter-spacing: -.06em;
  font-family: {{ settings.font-primary.family | append: '400'}};
}

.nav__link:hover {
  color: rgb(175, 175, 175);
}

.nav__searchbar {
  position: relative;
  display: flex;
  align-items: center;
}

.searchbar__input {
  border: none;
  outline: none;
  border-radius: 2px;
  padding: 0.65rem 0 0.5rem 2.2rem;
  top: 0%;
  left: 0%;
  width: 280px;
  background-color: #eeeeee;
  letter-spacing: -0.04em;
}

.searchbar__input::placeholder {
  color: rgb(34, 34, 34);
}

.search__link {
  position: absolute;
  z-index: 10;
  background: #eeeeee;
}

.nav__search-icon {
  padding: 3px 0;
  margin-left: 0.5rem;
  width: 20px;
}

/* mobile navigation */

.nav-mobile-button {
  background-color: white;
  height: 40px;
  width: 40px;
}

.mobile-nav {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 1px;
  left: -80%;
  background-color: var(--color-darkblue);
  padding: 0 1rem;
  width: 80%;
  height: 600px;
}

.mobile__nav-list {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.mobile-nav__item {
  text-align: start;
  margin: 0.5rem 0;
  padding: 0.5rem 1rem;
}

.mobile__nav-link {
  font-size: 1.125rem;
}

.mobile-nav__divider {
  width: 100%;
  height: 1px;
  background-color: var(--color-navdivider);
}

/* main */

.main {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

/* Hero section */

.section-hero::before {
  content: '';
  position: absolute;
  z-index: -10;
  background-repeat: no-repeat;
  
  top: -15.8%;
  width: 102%;
  height: 720px;
  background-size: cover;
  background-position: center;
}

.section-hero {
  position: relative;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height: 36rem;
  overflow: hidden;
}

.hero__elements {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  max-width: 550px;
  margin-left: 65%;
}

.hero__heading {
  text-shadow: 0px 0px 64px rgba(0, 0, 0, 0.84); 
}

.hero__cta-container {
  margin-top: 1.25rem;
}

.hero__cta {
  padding: 0.75rem 1.3rem;
  font-size: clamp(1.25rem, 1.5vw, 1.375rem);
  letter-spacing: -0.065em;
  color: white;
  white-space: nowrap;
  cursor: pointer;
  border-radius: 2px;
  background-color: var(--color-ctagreen);
  transition: all 0.3s;

  font-family: {{ settings.font-primary.family | append: '500'}};
}

.hero__cta:hover {
  background-color: #64afac;
}

.hero__cta[secondarycta] {
  background-color: var(--color-espresso);
}

/* featured links section */

.section-featured-links {
  width: 100%;
  flex-direction: column;
}

.featured-links__heading {
  margin-bottom: 4rem;
}

.featured-links-wrapper {
  display: flex;
  align-items: center;
  column-gap: 2rem;
  row-gap: 2rem;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 4rem;
}

.featured-link {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 390px;
  height: 270px;
  border-radius: 2px;
  background: radial-gradient( rgba(0, 0, 0, 0.13) 0%, rgba(13, 26, 29, 0.46) 82.73%);
}

.featured-link__image {
  position: absolute;
  z-index: -10;
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: blur(0.75px);
}

.featured-link__content {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.featured-link__text {
  color: white;
  font-size: clamp(1.25rem, 6vw, 1.375rem);
}


/* testimonial section */

.section-testimonials {
  justify-content: space-around;
  align-items: flex-start;
  position: relative;
  width: 100%;
  padding: 0 17%;
  z-index: 10;
  flex-wrap: wrap;
}

.testimonial-wrapper {
  display: flex;
  align-content: flex-start;
  position: relative;
  flex-direction: column;
  max-width: 280px;
  min-width: 280px;
  padding: 1rem 0 0.5rem;
  margin: 4rem 1rem;
  text-align: center;
  flex: 1 1 0px;
}

.testimonial__quotes {
  display: block;
  position: absolute;
  top: -7%;
  left: 8.75%;
  color: rgba(15, 28, 32, 0.12);
  font-family: 'Mate SC', serif;
  font-size: 144px;
}

.testimonial__author {
  justify-self: flex-end;
  margin-top: 0.6rem;
  font-size: 0.875rem;
  color: #5f5f5f;
}

.testimonial__text {
  font-size: 1.12rem;
  letter-spacing: -0.06em;
  margin-bottom: auto;

  font-family: {{ settings.font-primary.family | append: '400'}};
}

/* featured products section */

.section-featured-products {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.featured-products__wrapper {
  display: flex;
  flex-wrap: wrap;
  column-gap: 2rem;
  margin-top: 4rem;
  justify-content: center;
  row-gap: 2rem;
}

.product-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 2.5rem clamp(1rem, 4vw, 3rem);
  max-width: 320px;
}

.product-card__image {
  width: 230px;
  height: 200px;
  object-fit: cover;
  border-radius: 2px;
}

.product-card__text {
  margin-top: 2rem;
  text-align: center;
}

.product-card__price {
  margin-top: 0.5rem;
  font-size: 1.5rem;
  display: flex;
  align-items: baseline;

  font-family: {{ settings.font-tertiary.family | append: '500'}};
}

.product-card__price p {
  font-family: {{ settings.font-primary.family | append: '500'}};
}

.product-card__per-kg-price {
  margin-top: 0.2rem;
  font-size: 0.875rem;
  
  color: #2a2a2a;
  font-family: {{ settings.font-primary.family | append: '500'}}; 
}

.product-card__link {
margin-top: auto;
}

.product-card__button {
  margin-top: 1rem;
  align-self: flex-end;
  min-width: 210px;
}

/* from order to customer steps section */

.section-product-steps {
  flex-direction: column;
  padding: 1rem;
  width: 40%;
  margin-top: 6rem;
}

.product-step-wrapper {
  width: 70%;
  display: flex;
  justify-items: flex-start;
  align-items: center;
  text-align: center;
  margin: 5rem 0;
}

.product-step__text-container {
  flex: 1 0 auto;
  display: flex;
  justify-content: center;
}

.product-step__text {
  max-width: 280px;
  font-size: 1.25rem;
  letter-spacing: -0.05em;
  font-family: {{ settings.font-primary.family | append: '400'}};
}

.product-step__number {
  min-width: 5.5rem;
  justify-self: center;
  font-size: 3.375rem;
  
  font-family: {{ settings.font-primary.family | append: '400'}};
}

.product-step__icon {
  max-width: 76px;
  display: block;
  width: 3.25rem;
}

/* blog-template */

.blog-template {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.blog__hero {
  flex-direction: column;
  justify-content: flex-start;
  background-color: rgba(207, 207, 207, 0.294);
  overflow: hidden;
  height: 18rem;
}

.blog__hero::before {
  content: '';
  position: absolute;
  z-index: -10;
  background-repeat: no-repeat;
  background-size: auto;
  filter: blur(0.75px);
  top: -2px;
  left: -2px;
  width: 120%;
  height: 1060px;
  background-position: 0% 70%;
}

.blog__header {
  display: flex;
  flex-direction: column;
  align-items: center;
  align-self: center;
  z-index: 10;
  width: max(300px, 80%);
  max-width: 480px;
  height: 220px;
  padding: 3rem 2.5rem;
  margin-top: 10rem;
}

.blog__heading {
}

.blog__description {
  text-align: center;
  max-width: 380px;
  margin-top: 1rem;
}

.blog__articles {
  width: max(300px, 95%);
  max-width: 1000px;
  display: flex;
  align-self: center;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 10;
  margin-top: 4rem;
  row-gap: 2rem;
}

.blog__article-wrapper {
  display: flex;
  margin:  0 2rem;
  overflow: hidden;
  transition: all 0.2s ease-out;
  width: 100%;
  height: 220px;
}

.blog__article-wrapper:hover {
  /* transform: translateY(-2px); */
  box-shadow: 
  3px 4px 12px rgba(0, 0, 0, 0.109),
  1px 10px 12px -6px rgba(124, 124, 124, 0.15);;
}

.blog__article-image-wrapper {
  display: flex;
}

.blog__article-image {
  object-fit: cover;
  width: 230px;
}

.blog__article-textbox {
  display: flex;
  flex-direction: column;
  background-color: white;
  padding: 1.5rem 2rem 1rem;
  margin: 0 auto;
}

.blog__article-heading {
  align-self: center;
  font-size: 1.6rem;
}

.blog__article-heading:hover .blog__article-link {
  color: var(--color-darkbrown);
}

.blog__article-heading > a { 
  color: var(--color-darkblue);
}

.blog__article-excerpt {
  margin-top: 1.25rem;
  margin-bottom: 1rem;
}

.blog__article-author {
  margin-top: auto;
  text-align: center;
}

/* article-template */

.article-template {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}


.article__hero {
  width: 100%;
  flex-direction: column;
  justify-content: flex-start;
  background-color: rgba(207, 207, 207, 0.294);
  overflow: hidden;
  height: 18rem;
}

.article__hero::before {
  content: '';
  position: absolute;
  z-index: -10;
  top: -2%;
  left: -1%;
  width: 140%;
  height: 103%;
  background-position: 0% 70%;
  background-repeat: no-repeat;
  background-size: auto;
  filter: blur(0.75px);
}

.article__header {
  width: max(300px, 80%);
  max-width: 480px;
  height: 220px;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 3rem 2.5rem 0;
  align-self: center;
  z-index: 10;
}

.article__excerpt {
  text-align: center;
  max-width: 380px;
  margin-top: 2rem;
}

.article__author {
  margin: auto;
  text-align: center;
}

.article__content-wrapper {
  width: max(310px, 80%);
  max-width: 960px;
  align-self: center;
  padding: 2rem clamp(1rem, 4vw, 5rem);
  margin-top: 2rem;
}

.article__content-tags {
  display: flex;
}

.article__content-tag {
  margin-right: 0.75rem;
  padding: 0.4rem 1.1rem;
  border-radius: 70px;
  background-color: #F0F0F0;
  color: black;
  font-size: 0.875rem;
  white-space: nowrap;
}

.article__content {
  margin-top: 2rem;
  line-height: 1.6rem;
}

.article__comment-wrapper {
  width: max(300px, 80%);
  max-width: 700px;
}

.article__newcomment {
  display: flex;
  margin: 2rem auto 0;
}

.article__comment-form {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.article__form-info {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.article__form-message {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
}

.article__form-label {
  width: 120px;
  font-family: {{ settings.font-primary.family | append: '500'}};
}

.article__form-input {
  padding: 0.4rem 0 0.3rem 0.5rem;
  min-width: 250px;
  resize: none;
  border: 1px solid rgb(54, 54, 54);
  border-radius: 2px;
  flex: 1 0 auto;
}

.article__form-message textarea {
  height: 200px;
}

.article__form-button {
  margin-top: 1.5rem;
  width: min(300px, 85%);
  align-self: center;
}

.article__comments {
  display: flex;
  flex-direction: column;
  margin-top: 4rem;
}

.article__number-of-comments {
  align-self: center;
  font-size: 2rem;
  margin: 0;
}

.article__comment {
  display: flex;
  flex-direction: column;
  margin-top: 3rem;
}

/* page template */

.page-template {
  flex-direction: column;
  width: max(300px, 80%);
  max-width: 750px;
}

.page__heading {
  margin-top: 4rem;
}

.page__content {
  margin-top: 4rem;
}

/* product-template */

.product-template {
  width: max(300px, 90%);
  flex-direction: column;
  row-gap: 4rem;
}

.product__breadcrumb {
  width: 100%;
  max-width: 1200px;

  margin-top: 4rem;
  padding: 0 0.5rem;
}

.product__wrapper {
  width: 100%;
  max-width: 1200px;

  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: -2rem;
  padding: 4rem clamp(1.5rem, 4vw, 5rem);
  row-gap: 2rem;
  column-gap: 4rem;
}

/* product images */

.product__images-wrapper {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  align-items: center;
  row-gap: 2rem;
  flex: 1 0 40%;
  max-width: 100%;
}

.product__main-image {
  width: clamp(260px, 40vw, 400px);
  object-fit: cover;
  border-radius: 2px;
}

.product__images-preview {
  display: flex;
  justify-content: space-evenly;
  column-gap: 1rem;
}

.product__preview-image {
  border: 1px solid black;
  width: clamp(60px, 14vw, 90px);
  object-fit: cover;
  max-height: 150px;
}

/* product info, options */

.product__info-wrapper {
  display: flex;
  flex: 1 0 40%;
  flex-direction: column;
  row-gap: 2rem;
  max-width: 100%;
}

.product__price-wrapper {
  display: flex;
  align-items: center;
  column-gap: 1rem;
}

.product__price {
  font-size: 2.375rem;
  letter-spacing: -0.04em;
  
  font-family: {{ settings.font-tertiary.family | append: '500'}}
}

.product__per-kg-price {
  margin-top: 0.6rem;
  font-size: 0.875rem;
  color: #363636;

  font-family: {{ settings.font-primary.family | append: '500'}}
}

.product__description {
  margin-top: 0.25rem;
}

/* product form */

.product__form {
  display: flex;
  flex-direction: column;
  row-gap: 1.5rem;
}

.product__form-fieldset {
  border: none;
  padding: 0;
}

.product__form-variant-wrapper {
  display: flex;
  flex-direction: column;
  border: none;
  padding: 0;
  gap: 0.75rem;
}

.product__form-variant-options {
  display: flex;
  gap: 0.75rem;
  flex-wrap: wrap;
}


.product__form-option-input  {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0%;
  left: 0%;
  opacity: 0;
  z-index: 10;
}

.product__form-option-input:hover  {
  cursor: pointer;
}

.product__form-option-label {
  position: relative;
  text-align: center;
  min-width: 100px;
}

.product__form-option-input:hover + .product__form-option-label,
.product__form-option-input:checked + .product__form-option-label  {
  background-color: black;
  color: white;

  font-family: {{ settings.font-primary.family | append: '600'}};
}

.product__form-control {
  position: relative;
  display: flex;
  flex-direction: column;
  flex: 0 0 31%;
  row-gap: 0.75rem;
}

.product__form-label {
  pointer-events: none;
  font-size: 1.25rem;

  letter-spacing: -.065em;
  font-family: {{ settings.font-primary.family | append: '500'}};
}

.product__form-quantity-button {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120px;
  column-gap: 0.35rem;
  padding: 0.55rem 0.75rem;
  font-size: 1.125rem;
}

.product__form-quantity-input {
  text-align: center;
}

.product__form-quantity-input:focus {
  outline: none;
}

.product__form-quantity-input:hover,
.product__form-quantity-input:focus {
  background-color: white;
  color: black;
}

::-webkit-inner-spin-button {
  /* appearance: none; */
}

.product__variant-select {
  display: none;
}

/* breadcrumb snippet */

.breadcrumb {
  display: flex;
  flex-wrap: wrap;
  column-gap: 0.25rem;
  row-gap: 0.25rem;
  letter-spacing: -0.055em;
}

.breadcrumb__divider {
  color: #5f5f5f;
  font-size: 0.875rem;
  font-family: {{ settings.font-primary.family | append: '600'}}
}

.breadcrumb__link {
  color: #5f5f5f;
  font-size: 0.875rem;
  white-space: nowrap;
  transition: all 0.3s;

  font-family: {{ settings.font-primary.family | append: '500'}}
}

.breadcrumb__link:hover {
  color: black;
  text-shadow: 0 0 1px rgba(0, 0, 0, 0.164);
}

.breadcrumb__link:last-child {
  color: black;

  font-family: {{ settings.font-primary.family | append: '600'}}
}

/* collection-filter snippet */

.collection__filters {
  display: flex;
  flex-wrap: wrap;
  gap: 0.75rem;
}

.collection-filter {
  display: flex;
}

.collection-filter__text {
  color: #5f5f5f;
  font-size: 0.875rem;
  white-space: nowrap;

  font-family: {{ settings.font-primary.family | append: '500'}}
}

.collection-filter__button {
  padding: 0;
  color: #000000;
  font-size: 0.875rem;
  white-space: nowrap;
  letter-spacing: -0.055em;
  justify-content: flex-start;
  width: auto;

  font-family: {{ settings.font-primary.family | append: '600'}}
}

.collection-filter__button:hover,
.collection-filter__button:focus {
  font-family: {{ settings.font-primary.family | append: '600'}}
}

.collection-filter__list {
  border: 1px solid rgb(88, 88, 88);
}

.collection-filter__list-item {
  font-family: {{ settings.font-primary.family | append: '500'}}
}

.collection-filter__list-item:hover {
  font-family: {{ settings.font-primary.family | append: '600'}}
}

.collection-filter__arrow {
  position: relative;
}


/* collection-template */

.collection-template {
  width: max(300px, 95%);
  flex-direction: column;
  row-gap: 4rem
}

.collection__wrapper {
  display: flex;
  flex-direction: column;
  gap: 6rem;
  padding: 4rem clamp(0.5rem, 5vw, 8rem);
  width: max(300px, 90%);
  max-width: 1400px;
}

.collection__breadcrumb-and-sort {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 1.5rem;
}

.collection__products {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 4rem;
}

.collection__product-card {
  padding: 0;
  width: 230px;
}

/* cart template */

.cart-template {
  width: max(300px, 95%);
  flex-direction: column;
  row-gap: 4rem;
}

.cart__heading {
  margin-top: 4rem;
}

.cart__content {
  width: 100%;
  max-width: 1200px;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  padding: 4rem clamp(0.5rem, 5vw, 8rem);
  row-gap: 2rem;
  column-gap: 4rem;
}

/* cart table heading */

.cart__titles {
  display: flex;
  width: 100%;
  column-gap: 2rem;
}

.cart__titles::before {
  content: '';
  width: 23%;
}

.cart__title-one {
  width: 60%;
}

.cart__title-two {
  width: 17%;
}

/* cart form, all items */

.cart__form {
  display: flex;
  flex-direction: column;
  row-gap: 1.5rem;
  width: 100%;
}

.cart__item-wrapper {
  display: flex;
  width: max(280px, 100%);
  column-gap: 2rem;
}

.cart__form-divider {
  width: 100%;
  height: 1px;
  background-color: rgb(187 187 187);
}

.cart__item-image-link {
  min-width: 55px;
  width: min(150px, 32%);
  width: 23%;
}

.cart__item-image {
  width: 100%;
  object-fit: cover;
}

.cart__item-details {
  display: flex;
  flex-direction: column;
  row-gap: 0.55rem;
  width: 60%;
}

.cart__item-price-wrapper {
  column-gap: 0.2rem;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  justify-content: flex-start;
  width: 17%;
}

.cart__item-line-price {
  font-size: clamp(1rem, 4vw, 1.25rem);
  letter-spacing: -0.055em;
  white-space: nowrap;

  font-family: {{ settings.font-primary.family | append: '500'}}
}

.cart__item-option {
  font-size: 0.9rem;
  letter-spacing: -.04em;
  
  font-family: {{ settings.font-primary.family | append: '500'}}
}

.cart__form-quantity-remove-wrapper {
  display: flex;
  flex-wrap: wrap;
  column-gap: 0.75rem;
  row-gap: 0.35rem;
  align-items: baseline;
  margin-top: 0.1rem;
}

.cart__item-remove {
  color: black;
  font-size: .8rem;
  letter-spacing: -0.04em;
  border-bottom: 2px solid rgb(56, 56, 56);

  font-family: {{ settings.font-primary.family | append: '500'}}
}

/* cart checkout box */

.cart__checkout-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: clamp(310px, 100%, 480px);
  padding: 2rem clamp(1rem, 5vw, 4rem);
  gap: 1.25rem;
  margin-top: -1rem;
}

.cart__checkout-text-wrapper {
  display: flex;
  align-items: baseline;
}

.cart__checkout-sum {
  color: #1a1a1a;
  font-size: 1.25rem;
  letter-spacing: -.04em;
  width: 65%;
  
  font-family: {{ settings.font-primary.family | append: '600'}}
}

.cart__checkout-sum-shipping {
  font-size: 1.125rem;
  font-family: {{ settings.font-primary.family | append: '500'}}
}

.cart__total {
  display: flex;
  white-space: nowrap;
  width: 35%;
  column-gap: 0.25rem;
}

/* search-template */

.search__wrapper {
  gap: 4rem;
}

.search__form {
  max-width: 100%;
  width: 500px;
  margin-bottom: 2rem;
  justify-content: center;
  align-self: center;
  flex-wrap: nowrap;
}

.search__input {
  flex: 1 1 auto;
  min-width: 0;
}

.search-button {
  min-width: 100px;
}

::-webkit-search-cancel-button {
  display: none;
}

/*  footer */

.footer{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: var(--color-darkblue);
  color: white;
  width: 100%;
  margin-top: 4rem;
  padding: 2rem 0;
}

.footer__container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  justify-content: center;
  column-gap: 3rem;
  row-gap: 2rem;
  padding: 0 1rem;
}

.footer__lists {
  display: flex;
  flex-wrap: wrap;
  row-gap: 2rem;
  column-gap: 3rem;
}

.footer__list-container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.footer__list {
  display: flex;
  flex-direction: column;
}

.footer__list-item {
  padding: 0.25rem 0;
  text-align: start;
  white-space: normal;
}

.footer__link {
  color: #c0c0c0;
  font-size: 1rem;
}

.footer__link:hover {
  color: white;
}
.footer__heading {
  padding-bottom: 0.5rem;
  white-space: normal;
  color: white;
}

.footer__heading-link {
  font-size: 1.25rem;
  letter-spacing: -0.045em;
 
  font-family: {{ settings.font-primary.family | append: '500'}}
}

.footer__extras {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  gap: 1.5rem;
  width: 100%;
  margin-top: 2rem;
  padding-top: 2rem;
}

.social-icons {
  display: flex;
  column-gap: 1.5rem;
}

.social-icon {
  display: block;
  width: 48px;
}

.footer__extras::before {
  content: '';
  top: 0%;
  position: absolute;
  width: 100%;
  height: 1px;
  background-color: var(--color-navdivider);
}

@media (max-width: 1200px) {
  .nav-container {
    width: 95%;
  }

  .hero__elements {
    margin-bottom: 14rem;
    margin-left: 40%;
  }

  .section-hero::before {
    top: -2%;
  }
}

@media (max-width: 880px) {
  .blog__article-wrapper {
    flex-direction: column;
    align-items: center;
    height: auto;
}

@media (max-width: 800px) {

  .nav__list {
    row-gap: 0;
  }

  .nav__list-item {
    padding: 0.5rem 0;
  }

  .section-hero::before {
    height: 500px;
  }

  
  .section-hero {
    height: 26rem;
  }

  .hero__elements {
    margin-left: 20%;
    margin-right: 15%;
    margin-bottom: 8rem;
  }
  
}

@media (max-width: 500px) {
  
  .logo {
    height: 44px;
  }
  
  .nav__list-side {
    gap: 0.5rem;
    margin-left: 0.35rem;
  }

  .nav__icon {
    max-width: 26px;
  }

  .nav__user-icon {
    max-width: 23px;
  }
  
  .searchbar__input {
    max-width: 180px;
  }
  
  .hero__elements {
    margin-left: 10%;
    margin-bottom: 10rem;
    margin-right: 0;
  }
  
  .featured-link {
    width: 300px;
    height: 200px;
  }

  .hero__cta-container {
    margin-top: 1rem;
  }

  .product__breadcrumb {
    margin-top: 2rem;
  }

  /* product/collection */
  .product__wrapper,
  .collection__wrapper {
    padding-top: 2rem;
    padding-bottom: 2rem;
    gap: 3rem;
  }
  
  /* cart */
  .cart__content {
    padding: 2rem 0.5rem;
  }

  .cart__form-divider {
    width: 90%;
    align-self: center;
  }

  .cart__item-wrapper,
  .cart__titles {
    column-gap: 0.5rem;
  }

}